{
  "name": "Structura",
  "type": "nextjs",
  "version": "0.1.0",
  "description": "Next.js 15 application with MUI 7, Supabase, and comprehensive authentication system",
  "packageManager": "pnpm",
  "framework": {
    "name": "Next.js",
    "version": "15.5.6"
  },
  "runtime": {
    "node": ">=18.0.0",
    "typescript": "5.x"
  },
  "features": {
    "appRouter": true,
    "serverComponents": true,
    "apiRoutes": true,
    "middleware": true,
    "internationalization": true,
    "authentication": true,
    "database": "supabase",
    "styling": ["mui", "tailwind"],
    "stateManagement": "react-query",
    "formHandling": "react-hook-form",
    "validation": "zod",
    "errorHandling": "sentry",
    "logging": "pino"
  },
  "dependencies": {
    "core": {
      "next": "15.5.6",
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "typescript": "5.x"
    },
    "ui": {
      "@mui/material": "7.3.4",
      "@mui/icons-material": "7.3.4",
      "@mui/material-nextjs": "7.3.3",
      "@mui/x-date-pickers": "8.14.0",
      "@emotion/react": "11.14.0",
      "@emotion/styled": "11.14.1",
      "tailwindcss": "4.1.14"
    },
    "backend": {
      "@supabase/ssr": "0.7.0",
      "@supabase/supabase-js": "latest"
    },
    "dataFetching": {
      "@tanstack/react-query": "5.90.11",
      "@tanstack/react-query-devtools": "5.91.1"
    },
    "forms": {
      "react-hook-form": "7.45.4",
      "@hookform/resolvers": "3.3.2",
      "zod": "3.25.67"
    },
    "utilities": {
      "pino": "10.0.0",
      "@sentry/nextjs": "10",
      "i18next": "25.6.0",
      "react-i18next": "16.0.1",
      "clsx": "2.1.1",
      "tailwind-merge": "2.5.5"
    }
  },
  "structure": {
    "appDir": "app",
    "srcDir": "src",
    "componentsDir": "src/components",
    "libDir": "src/lib",
    "typesDir": "src/types",
    "hooksDir": "src/hooks",
    "contextsDir": "src/contexts",
    "configDir": "src/config",
    "publicDir": "public",
    "scriptsDir": "scripts"
  },
  "conventions": {
    "fileNaming": {
      "components": "PascalCase",
      "hooks": "camelCase",
      "utilities": "camelCase",
      "routes": "kebab-case"
    },
    "importAliases": {
      "@/*": "./src/*"
    },
    "componentStructure": "feature-based",
    "colocation": true
  },
  "tools": {
    "linter": "eslint",
    "formatter": "prettier",
    "typeChecker": "typescript",
    "bundler": "next",
    "packageManager": "pnpm",
    "gitHooks": "husky"
  },
  "environment": {
    "development": {
      "port": 3000,
      "command": "pnpm dev"
    },
    "build": {
      "command": "pnpm build",
      "output": "standalone"
    }
  }
}
