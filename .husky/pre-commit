# Exit on any error
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}üîç Running pre-commit checks...${NC}"

# Run lint-staged
if ! npx lint-staged; then
  echo "${RED}‚ùå Pre-commit checks failed. Please fix the issues and try committing again.${NC}"
  exit 1
fi
npx tsc --noEmit || exit 1

echo "${GREEN}‚úÖ Pre-commit checks passed!${NC}"
