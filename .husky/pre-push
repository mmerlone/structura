#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}ğŸ” Running pre-push checks...${NC}"

# Run TypeScript type checking
echo "${BLUE}ğŸ” Type checking...${NC}"
if ! pnpm type-check; then
  echo "${RED}âŒ Type checking failed. Please fix the issues before pushing.${NC}"
  echo "${RED}Tip: Run 'pnpm type-check' to see the detailed errors.${NC}"
  exit 1
fi

echo "${GREEN}âœ… Pre-push checks passed!${NC}"
